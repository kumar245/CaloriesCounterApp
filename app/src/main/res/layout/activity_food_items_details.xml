<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#8BC34A"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kumar.user.caloriescounterapp.food_items_details">
<ImageView
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:id="@+id/logo"
    android:layout_centerHorizontal="true"
    android:src="@drawable/apple"
    />
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/row_bg"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"
            android:text="dkdp"
            android:textSize="19sp"
            android:id="@+id/detsFoodName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsCaloriesTitle"
            android:text="Calories : "
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/detsCaloriesValue"
            android:text="200"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
<TextView
    android:id="@+id/detsDateText"
    android:text="Consumed On.."
    android:textStyle="italic"
    android:textSize="14sp"
    android:layout_marginTop="14dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<Button
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="@drawable/circle"
    android:text="Share"
    android:layout_gravity="right"
    android:layout_marginTop="45dp"
    android:id="@+id/detsShareButton"/>


    </LinearLayout>


</RelativeLayout>
