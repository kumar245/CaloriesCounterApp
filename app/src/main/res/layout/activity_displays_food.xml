<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8BC34A"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_height="match_parent"
    tools:context="com.kumar.user.caloriescounterapp.Displays_food">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ACC1"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff3f6ff"
            android:textStyle="bold"
            android:id="@+id/totalAmountTextView"
            android:layout_marginLeft="4dp"
            android:paddingRight="10dp"
            android:text="@string/food_total_text"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="#ffee1d27"
            android:textSize="27sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalItemsTextVIew"
            android:textColor="#ff212121"
            android:textStyle="bold"
            android:textSize="13sp"
            android:text="@string/food_items_num"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list"
      android:layout_below="@+id/linearLayout"
        android:divider="#212121"
        android:dividerHeight="2dp">

    </ListView>
</RelativeLayout>
